{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h2>New Yeti</h2>
                <p class="lead">Here you can add new Yeti to the collection.</p>
            </div>

            <div class="row justify-content-md-center">
                <div class="col-md-8 col-lg-9 ">
                    <h4 class="mb-3">Yeti details</h4>
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.firstName)}}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.lastName)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            {{ form_row(form.height)}}
                        </div>
                        <div class="col-sm-3">
                            {{ form_row(form.weight)}}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.image)}}
                        </div>
                    </div>
                    {{ form_label(form.address, 'Place of residence')}}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.address.city.country.name, { 'label': 'Country' })}}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.address.city.name, { 'label': 'City' })}}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.address.street)}}
                        </div>
                        <div class="col-sm-3">
                            {{ form_row(form.address.streetNumber)}}
                        </div>
                        <div class="col-sm-3">
                            {{ form_row(form.address.zip)}}
                        </div>
                    </div>
                    <div class="row">
                        {{ form_row(form.submit) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </main>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2022â€“2022 Yetinder</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>

{% endblock %}